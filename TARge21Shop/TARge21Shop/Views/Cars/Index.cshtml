@model IEnumerable<TARge21Shop.Models.Car.CarIndexViewModel>

@{
    int rowNumber = 1;
}

<div class="h1">
    Products
</div>

<div>
    <a asp-action="create" asp-controller="cars" type="submit" class="btn btn-primary">Create</a>
</div>

<form method="post">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">Brand</th>
                <th scope="col">Model</th>
                <th scope="col">Color</th>
                <th scope="col">Fuel Type</th>
                <th scope="col">Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var spaceship in Model)
            {
                    <tr>
                        <td>@rowNumber</td>
                        <td>@spaceship.Brand</td>
                        <td>@spaceship.Model</td>
                        <td>@spaceship.Color</td>
                        <td>@spaceship.FuelType</td>
                        <td>@spaceship.Price</td>
                        <td>
                            <a asp-action="details" asp-controller="cars" asp-route-id="@spaceship.Id" class="btn btn-info">Details</a>
                            <a asp-action="update" asp-controller="cars" asp-route-id="@spaceship.Id" class="btn btn-primary">Update</a>
                            <a asp-action="delete" asp-controller="cars" asp-route-id="@spaceship.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                rowNumber += 1;
            }
        </tbody>
    </table>
</form>